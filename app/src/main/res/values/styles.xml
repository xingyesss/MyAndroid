<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="loadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item><!--设置dialog的背景-->
        <item name="android:windowFrame">@null</item><!--Dialog的windowFrame框为无-->
        <item name="android:windowNoTitle">true</item><!--是否显示title-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--是否半透明-->
        <item name="android:windowContentOverlay">@null</item><!--是否半透明-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item><!-- 对话框是否有遮盖 -->
        <item name="android:backgroundDimEnabled">false</item><!--背景是否模糊显示-->
        <item name="android:backgroundDimAmount">0.6</item><!--背景的灰度-->
    </style>

    <style name="dialog_bg" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>

    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ECECEB</item>
    </style>

    <attr name="item_count" format="integer" />
    <attr name="text_color_normal" format="color" />
    <attr name="text_color_hightlight" format="color" />
    <attr name="text_size" format="dimension" />
    <attr name="indicator_color" format="color" />
    <attr name="indicator_src" format="reference" />
    <attr name="indicator_style">
        <enum name="bitmap" value="0" />
        <enum name="line" value="1" />
        <enum name="square" value="2" />
        <enum name="triangle" value="3" />
    </attr>
    <!-- RVPIndicator -->
    <declare-styleable name="RVPIndicator">
        <attr name="item_count" />
        <attr name="text_color_normal" />
        <attr name="text_color_hightlight" />
        <attr name="text_size" />
        <attr name="indicator_color" />
        <attr name="indicator_src" />
        <attr name="indicator_style" />
    </declare-styleable>

</resources>
